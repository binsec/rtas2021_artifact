\defbeamertemplate*{footline}{infolines theme}
{
  \leavevmode%
  \hskip.118\paperwidth%
  \hbox{\color{beamer@ceagreen}\vrule width .882\paperwidth height1pt}

  \hbox{%
  \hspace*{.14\paperwidth}\begin{beamercolorbox}[wd=.42\paperwidth,ht=2.25ex,left]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.32\paperwidth,ht=2.25ex,center]{date in head/foot}%
    \usebeamerfont{date in head/foot}\insertshortdate{}
  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=.10\paperwidth,ht=2.25ex,right]{date in head/foot}%
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
  \end{beamercolorbox}}%
 
  \vskip1pt%
}


\defbeamertemplate*{headline}{cea theme}{}


\defbeamertemplate*{frametitle}{cea theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.86\paperwidth,dp=1ex,center]{frametitle}
    \usebeamerfont{frametitle}%
    \color{beamer@ceatitle}%
    \strut\insertframetitle\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else%
      {\usebeamerfont{framesubtitle}\color{beamer@ceatitle}\insertframesubtitle\strut\par}%
      \fi
    }%
  \end{beamercolorbox}}%


  \vskip-1em\vskip2pt
   \hbox{\hskip-14pt\hskip-.118\paperwidth\hspace*{.118\paperwidth}\color{beamer@ceared}\vrule width .882\paperwidth height 1pt}%
}




